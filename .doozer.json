{
  "targets": {

    "precise-amd64": {
      "buildenv": "precise-amd64",
      "builddeps": [
        "cmake",
        "git",
        "build-essential",
        "pkg-config",
        "gettext",
        "libavahi-client-dev",
        "libssl-dev",
        "zlib1g-dev",
        "wget",
        "bzip2",
        "git-core",
        "liburiparser-dev",
        "python",
        "dvb-apps",
        "debhelper",
        "libcurl4-gnutls-dev",
        "curl",
        "ccache"
      ],

      "buildcmd": [
        "AUTOBUILD_CONFIGURE_EXTRA=--disable-bintray_cache\\ --disable-dvbscan\\ --disable-libvpx_static\\ --enable-ffmpeg_static\\ --enable-hdhomerun_static ./Autobuild.sh -t ${TARGET} -j ${PARALLEL} -w ${WORKDIR}"
